    <div id="contactModal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>İletişim Formu</h2>
            <p>Aşağıdaki formu doldurarak hukuki sorununuzu özetleyebilir veya danışmanlık talebinizi iletebilirsiniz.</p>
            
            <form id="contact-form" action="https://formspree.io/f/xanplqpo" method="POST" class="contact-form">
                <label for="name">Adınız Soyadınız:</label>
                <input type="text" id="name" name="name" required>
                <label for="email">E-posta Adresiniz:</label>
                <input type="email" id="email" name="email" required>
                <label for="phone">Telefon Numaranız (İsteğe Bağlı):</label>
                <input type="tel" id="phone" name="phone">
                <label for="subject">Konu:</label>
                <input type="text" id="subject" name="subject" required>
                <label for="message">Mesajınız:</label>
                <textarea id="message" name="message" rows="6" required></textarea>
                <button type="submit" class="form-submit-btn">Formu Gönder</button>
                <p id="form-status" class="form-status"></p>
            </form>
        </div>
    </div>

    <script>
/* ================================== */
/* SİTENİN TÜM JAVASCRIPT KODLARI (CANLI VERSİYON) */
/* ================================== */

// Tarayıcıya, tüm HTML sayfasının yüklenmesini beklemesini, ondan sonra bu script'i çalıştırmasını söyler.
// Bu, script'in aradığı HTML elementlerini bulamama sorununu engeller.
document.addEventListener('DOMContentLoaded', function() {

    // --- 1. MOBİL MENÜ İŞLEVİ ---
    const menuToggle = document.querySelector('#menu-toggle');
    const navLinks = document.querySelectorAll('.nav-menu a');
    if (menuToggle && navLinks.length) {
        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth < 769) {
                    menuToggle.checked = false;
                }
            });
        });
    }

    // --- 2. YUKARI ÇIK BUTONU İŞLEVİ ---
    const scrollTopBtn = document.querySelector("#scrollTopBtn");
    if (scrollTopBtn) {
        window.onscroll = function() {
            if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
                scrollTopBtn.classList.add("show");
            } else {
                scrollTopBtn.classList.remove("show");
            }
        };
    }

    // --- 3. İLETİŞİM FORMU (MODAL) AÇMA/KAPATMA İŞLEVİ ---
    const modal = document.getElementById("contactModal");
    const openBtn = document.getElementById("openContactFormBtn");
    const closeBtn = document.querySelector(".close-btn");

    if (modal && openBtn && closeBtn) {
        openBtn.onclick = function() { modal.style.display = "block"; }
        closeBtn.onclick = function() { modal.style.display = "none"; }
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    }

    // --- 4. AJAX İLE FORM GÖNDERME İŞLEVİ ---
    const contactForm = document.getElementById('contact-form');
    const formStatus = document.getElementById('form-status');

    async function handleFormSubmit(event) {
        event.preventDefault();
        const form = event.target;
        const data = new FormData(form);

        try {
            const response = await fetch(form.action, {
                method: form.method,
                body: data,
                headers: { 'Accept': 'application/json' }
            });

            if (response.ok) {
                formStatus.innerHTML = "Mesajınız başarıyla gönderildi!";
                formStatus.className = 'form-status success';
                form.reset();
                setTimeout(() => {
                    if (modal) modal.style.display = "none";
                    formStatus.className = 'form-status';
                    formStatus.innerHTML = '';
                }, 3000);
            } else {
                formStatus.innerHTML = "Bir sorun oluştu. Lütfen tekrar deneyin.";
                formStatus.className = 'form-status error';
            }
        } catch (error) {
            formStatus.innerHTML = "Bir ağ hatası oluştu. Lütfen tekrar deneyin.";
            formStatus.className = 'form-status error';
        }
    }

    if (contactForm) {
        contactForm.addEventListener("submit", handleFormSubmit);
    }
});
    </script>

